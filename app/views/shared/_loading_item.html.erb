<li id="<%= loading_item.id %>">
<span class="user">
  <%= link_to loading_item.user.name, loading_item.user %>
</span>
<span class="content"><%= loading_item.url %></span>
<span class="content"><%= loading_item.content.to_s[0,200] %></span>
<span class="timestamp">
  Posted <%= time_ago_in_words(loading_item.created_at) %> ago.
</span>
<% if current_user?(loading_item.user) %>
  <%= link_to "delete", loading_item, method: :delete,
    data: { confirm: "You sure?" },
    title: loading_item.content %>
  <% end %>
  / <%= link_to "view original site","#{loading_item.url}" %>
</li>
