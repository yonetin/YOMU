<% provide(:title, "title") %>
<div class="row">
  <aside class="span4">
  <section>
  <h1>
    <%= @article.title %>
  </h1>
  </section>
  </aside>
  <div class="span8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>単語</th>
          <th>出現回数</th>
        </tr>
      </thead>
      <% @words.each do |key, value| %>
        <% break if value == 1 #出現1回の文字は表示しない %>
        <tr>
          <td><%= key %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

